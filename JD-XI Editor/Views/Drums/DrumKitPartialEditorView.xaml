<UserControl x:Class="JD_XI_Editor.Views.Drums.DrumKitPartialEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mahapps="http://metro.mahapps.com/winfx/xaml/controls"
             MaxWidth="1140">
    <mahapps:MetroTabControl x:Name="Items"
                             Padding="0,5,0,0"
                             KeepVisualTreeInMemoryWhenChangingTabs="True">
        <mahapps:MetroTabControl.Resources>
            <Style BasedOn="{StaticResource SimpleTabItem}" TargetType="{x:Type mahapps:MetroTabItem}" />
        </mahapps:MetroTabControl.Resources>
    </mahapps:MetroTabControl>
</UserControl>