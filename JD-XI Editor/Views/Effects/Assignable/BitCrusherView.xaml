<GroupBox x:Class="JD_XI_Editor.Views.Effects.Assignable.BitCrusherView"
          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
          xmlns:knobControl="clr-namespace:KnobControl;assembly=KnobControl"
          Header="Bit Crusher"
          Style="{StaticResource MahApps.Styles.GroupBox}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="85" />
            <RowDefinition Height="85" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0"
                    Grid.Column="0"
                    Orientation="Vertical">
            <knobControl:Knob Width="65"
                              Height="65"
                              HorizontalAlignment="Center"
                              HorizontalContentAlignment="Center"
                              ArcEndAngle="150"
                              ArcStartAngle="-150"
                              Maximum="127"
                              Minimum="0"
                              Value="{Binding BitCrusherParameters.Level}" />
            <TextBlock Text="Level"
                       TextAlignment="Center"
                       TextWrapping="Wrap" />
        </StackPanel>
        <StackPanel Grid.Row="0"
                    Grid.Column="1"
                    Orientation="Vertical">
            <knobControl:Knob Width="65"
                              Height="65"
                              HorizontalAlignment="Center"
                              HorizontalContentAlignment="Center"
                              ArcEndAngle="150"
                              ArcStartAngle="-150"
                              Maximum="127"
                              Minimum="0"
                              Value="{Binding BitCrusherParameters.Rate}" />
            <TextBlock Text="Rate"
                       TextAlignment="Center"
                       TextWrapping="Wrap" />
        </StackPanel>

        <StackPanel Grid.Row="1"
                    Grid.Column="0"
                    Orientation="Vertical">
            <knobControl:Knob Width="65"
                              Height="65"
                              HorizontalAlignment="Center"
                              HorizontalContentAlignment="Center"
                              ArcEndAngle="150"
                              ArcStartAngle="-150"
                              Maximum="127"
                              Minimum="0"
                              Value="{Binding BitCrusherParameters.Bit}" />
            <TextBlock Text="Bit"
                       TextAlignment="Center"
                       TextWrapping="Wrap" />
        </StackPanel>
        <StackPanel Grid.Row="1"
                    Grid.Column="1"
                    Orientation="Vertical">
            <knobControl:Knob Width="65"
                              Height="65"
                              HorizontalAlignment="Center"
                              HorizontalContentAlignment="Center"
                              ArcEndAngle="150"
                              ArcStartAngle="-150"
                              Maximum="127"
                              Minimum="0"
                              Value="{Binding BitCrusherParameters.Filter}" />
            <TextBlock Text="Filter"
                       TextAlignment="Center"
                       TextWrapping="Wrap" />
        </StackPanel>
    </Grid>
</GroupBox>